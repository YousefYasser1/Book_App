@model BookViewModel
@{
    ViewData["Title"] = "Edit Book";
}

<h2>
    Edit Book
</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Author" class="text-muted"></label>
        <input type="text" asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId" class="text-muted"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories , "Id" , "Name"))">
            <option></option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="text-muted"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rate" class="text-muted"></label>
        <input type="number" asp-for="Rate" class="form-control" />

    </div>

    <button class="btn btn-primary mt-4" type="submit">

        Edit
    </button>

    <a class="btn btn-secondary mt-4" asp-action="Index">

        Cancel
    </a>
</form>